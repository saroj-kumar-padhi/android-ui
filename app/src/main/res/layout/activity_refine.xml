<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="13dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Your Availability"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#223397"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:background="@drawable/textbox"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Your Status"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#223397"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hi community! I am open to new connections "
                android:textColorHint="#223397"
                android:maxLength="250"
                android:background="@drawable/textbox"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47/250"
                android:layout_gravity="end"
                android:textColor="#4255BC"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Hyper local Distance"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#223397"
                android:layout_marginBottom="15dp"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/continuousSlider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:value="50.0"
                android:valueFrom="0.0"
                android:valueTo="100.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1km"
                    android:textColor="#4255BC"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100km"
                    android:textColor="#4255BC"
                    android:layout_marginStart="250dp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Purpose"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#223397"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:id="@+id/btncoffee"
                        android:onClick="Check"
                        android:text="Coffee"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="#1B2A72"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="11dp"
                        app:backgroundTint="#fff"
                        android:background="@drawable/roundbutton"/>

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnbusi"
                        android:onClick="Check"
                        android:text="Business"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/roundbutton"/>

                    <Button
                        android:layout_width="88dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnhobb"
                        android:onClick="Check"
                        android:text="Hobbies"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/roundbutton"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnfrd"
                        android:onClick="Check"
                        android:text="Friendship"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/roundbutton"/>

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnmov"
                        android:onClick="Check"
                        android:text="Movies"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/roundbutton"/>

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:id="@+id/btndin"
                        android:text="Dinning"
                        android:onClick="Check"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_marginBottom="11dp"
                        android:background="@drawable/roundbutton"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:id="@+id/btndat"
                        android:onClick="Check"
                        android:text="Dating"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/roundbutton"/>

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:id="@+id/btnmatr"
                        android:onClick="Check"
                        android:text="Matrimony"
                        android:textColor="#1B2A72"
                        app:backgroundTint="#fff"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/roundbutton"/>

                </LinearLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Save  Explore"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/roundbutton"/>




            </LinearLayout>
        </LinearLayout>


    </ScrollView>



</RelativeLayout>